@model Ejercicio_ASP.NET_MVC.Models.proveedor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Agregar Proveedor", "Create", "Proveedor", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </nav>
    <br />
    
    <div>
        <div class="offset-2 col-md-6">
            <h3>¿Seguro que desea eliminar a este Proveedor?</h3>
            <dl class="dl-horizontal">
                <dt>
                    Nombre
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt>
                    Téléfono
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.telefono)
                </dd>

                <dt>
                    Página Web
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.pagina_web)
                </dd>

                <dt>
                    Dirección
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.direccion)
                </dd>

                <dt>
                    Ciudad
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ciudad.nombre)
                </dd>

                <dt>
                    Comuna
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.comuna.nombre)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-primary" />
                </div>
            }
            <footer class="page-footer font-small blue">

                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">
                    <p> &copy; @DateTime.Now.Year - Todos los Derechos Reservados</p>
                </div>
                <!-- Copyright -->

            </footer>
        </div>
</body>
</html>
